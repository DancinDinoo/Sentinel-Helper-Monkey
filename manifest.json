{
  "manifest_version": 3,
  "name": "Sentinel Helper Monkey",
  "version": "0.2",
  "description": "Hours of coding to solve 15 seconds of effort. Efficient.",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://portal.azure.com/*",
    "https://*.reactblade.portal.azure.net/*",
    "https://security.microsoft.com/*",
    "https://mto.security.microsoft.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Sentinel Helper Monkey"
  },
  "content_scripts": [
    {
      "matches": [
        "https://portal.azure.com/*",
        "https://*.reactblade.portal.azure.net/*",
        "https://security.microsoft.com/*",
        "https://mto.security.microsoft.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
  ,
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
